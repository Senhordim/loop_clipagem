<div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= @publication.title %></h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
            Criado em: <%= @publication.created_at.strftime("%d/%m/%Y")  %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <div class="pull-right">

                <%= link_to :back, class: 'btn btn-default' do %>
                  <i class="fa fa-chevron-left" aria-hidden="true"></i> <%= t ".back" %>
                <% end %>

                <%= link_to edit_ad_publication_path, class: 'btn btn-primary' do %>
                  <i class="fa fa-pencil-square-o" aria-hidden="true"></i> <%= t ".edit" %>
                <% end %>
              </div>
            </div>
          </div>

           <br>
          <table width="100%" class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Tipo</th>
                <th>Dias de publicação </th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td></td>
                <td></td>
              </tr>
            </tbody>
          </table>


        </div>
      </div>
    </div>
</div>


