  <div class="row">
    <div class="col-lg-12">
      <div class="pull-right">
        <%= link_to 'Cancelar', ad_publications_path, class: 'btn btn-default' %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4">
      <%= f.association :vehicle,  input_html: { class: 'chosen-select', "data-placeholder": "Escolha um veÃ­culo"} %>
