<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Publicações</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
          Lista de publicações
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
      <div class="row">
        <div class="col-lg-12">
          <div class="pull-right">
            <%= link_to  new_ad_publication_path, class: 'btn btn-primary' do %>
              <i class="fa fa-plus" aria-hidden="true"></i> <%= t('.links.new') %>
            <% end %>
          </div>
        </div>
      </div>
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover top-buffer">
            <thead>
              <tr>
                <th><%= t '.name' %></th>
                <th><%= t '.status' %></th>
                <th><%= t '.created_at' %></th>
                <th><%= t '.publication_at' %></th>
                <th><%= t '.type_vehicle' %></th>
                <th><%= t '.actions' %></th>
              </tr>
            </thead>
            <tbody>
              <% @publications.each do |publication| %>
                <tr class="odd gradeX">
                  <td><%= publication.title %></td>
                  <td>
                    <% if  publication.status == "public" %>
                      <span class="label label-success label-lg"> <%= t 'enumerize.publication.status.public' %> </span>
                    <% elsif publication.status == "draft" %>
                      <span class="label label-default label-lg"> <%= t 'enumerize.publication.status.draft' %> </span>
                    <% else %>
                      <span class="label label-danger label-lg">  <%= t 'enumerize.publication.status.inactive' %> </span>
                    <% end %>
                  </td>
                  <td><%= publication.created_at.strftime("%d/%m/%Y") %></td>
                  <td><%= publication.date_of_publication.strftime("%d/%m/%Y") %></td>
                  <td><%= t publication.vehicle.vehicle_type %></td>
                  <td class="center">
                    <%= link_to ad_publication_path(publication), class: 'btn btn-default ', "data-toggle": "tooltip", "data-placement": "top", "title": t(".links.view") do %>
                      <i class="fa fa-eye"></i>
                    <% end %>
                    <%= link_to edit_ad_publication_path(publication), class: 'btn btn-default ' , "data-toggle": "tooltip", "data-placement": "top", "title": t(".links.edit") do %>
                      <i class="fa fa-pencil"></i>
                    <% end %>
                    <%= link_to ad_publication_path(publication), method: :delete, data: { confirm: "tem certeza?" }, class: 'btn btn-default', "data-toggle": "tooltip", "data-placement": "top", "title": t(".links.remove") do %>
                      <i class="fa fa-trash"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <%= paginate (@publications) %>
      </div>
    </div>
  </div>
</div>




