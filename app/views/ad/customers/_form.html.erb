<%= simple_form_for [:ad, @customer] do |f| %>

  <div class="row">
    <div class="col-md-6">
      <% if f.object.logo? %>
        <%= image_tag f.object.logo.url %>
      <% end %>
    </div>

    <div class="col-md-6">
      <div class="pull-right">
        <%= link_to 'Voltar', ad_admins_path, class: 'btn btn-default' %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <%= f.input :social_name, input_html: {placeholder: 'Razão Social'} %>
    </div>
    <div class="col-md-3">
      <%= f.input :cnpj, input_html: {placeholder: 'CNPJ do cliente', class: 'cnpj-mask'} %>
    </div>
     <div class="col-md-3">
      <%= f.input :phone, input_html: {placeholder: 'Telefone', class: 'phone-mask'} %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <%= f.input :username, input_html: { placeholder: 'Usuário para o cliente' } %>
    </div>
    <div class="col-md-6">
      <%= f.input :email, input_html: {placeholder: 'Insira um email válido'} %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <%= f.input :password, input_html: {placeholder: 'Insira uma senha segura'} %>
    </div>
    <div class="col-md-3">
      <%= f.input :password_confirmation, input_html: {placeholder: 'Confirme aqui sua senha'} %>
    </div>
    <div class="col-md-6">
      <% if f.object.logo? %>
        <%= f.input :logo, as: :file, label: 'Trocar logo do cliente' %>
      <% else %>
        <%= f.input :logo, as: :file %>
      <% end %>
    </div>
  </div>
<% end %>
