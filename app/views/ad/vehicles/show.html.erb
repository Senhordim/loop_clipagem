<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= @vehicle.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
            Criado em: <%= @vehicle.created_at.strftime("%d/%m/%Y")  %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <div class="pull-right">
                <%= link_to 'Cancelar', :back, class: 'btn btn-default' %>
                <%= link_to 'Editar', edit_ad_vehicle_path  , class: 'btn btn-primary' %>

              </div>
            </div>
          </div>

           <br>
          <table width="100%" class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Tipo</th>
                <th>Dias de publicação </th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= @vehicle.vehicle_type %></td>
                <td><%= @vehicle.publication_day %></td>
              </tr>
            </tbody>
          </table>

          <table width="100%" class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Nacional</th>
                <th>País </th>
                <th>Estado</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= @vehicle.national %></td>
                <td><%= @vehicle.country %></td>
                <td><%= @vehicle.state   %></td>
              </tr>
            </tbody>
          </table>

          <table width="100%" class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Link da matéria</th>
                <th>Endereço do site</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= @vehicle.url %></td>
                <td><%= @vehicle.address %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

