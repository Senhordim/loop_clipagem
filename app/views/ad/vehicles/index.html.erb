<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Lista de veículos</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
          DataTables Advanced Tables
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Tipo</th>
              <th>Dias de publicação </th>
              <th>Criado em </th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @vehicles.each do |vehicle| %>
              <tr class="odd gradeX">
                <td><%= vehicle.name %></td>
                <td><span class="label label-success"><%= vehicle.vehicle_type %></span></td>
                <td><%= vehicle.publication_day %></td>
                <td class="center"><%= vehicle.created_at.strftime("%d/%m/%Y") %></td>
                <td class="center">
                  <%= link_to ad_vehicle_path(vehicle), class: 'btn btn-primary ' do %>
                    <i class="fa fa-eye"></i>
                  <% end %>
                  <%= link_to edit_ad_vehicle_path(vehicle), class: 'btn btn-primary ' do %>
                    <i class="fa fa-pencil"></i>
                  <% end %>
                  <%= link_to ad_vehicle_path(vehicle), method: :delete, data: { confirm: "tem certeza?" }, class: 'btn  btn-danger' do %>
                    <i class="fa fa-trash"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>



