<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Lista de ve√≠culos</h1>
  </div>
</div>



<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
          DataTables Advanced Tables
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
      <div class="row">
        <div class="col-lg-12">
           <div class="pull-right">
          <%= link_to t('.links.new'), new_ad_vehicle_path, class: 'btn btn-primary' %>
        </div>
         </div>
      </div>

        <table width="100%" class="table table-striped table-bordered table-hover top-buffer">
          <thead>
            <tr>
              <th><%= t '.name' %></th>
              <th><%= t '.vehicle_type' %></th>
              <th><%= t '.publication_day' %></th>
              <th><%= t '.created_at' %></th>
              <th><%= t '.actions' %></th>
            </tr>
          </thead>
          <tbody>
            <% @vehicles.each do |vehicle| %>
              <tr class="odd gradeX">
                <td><%= vehicle.name %></td>
                <td><span class="label label-success"><%= t vehicle.vehicle_type %></span></td>
                <td><%= vehicle.publication_day %></td>
                <td class="center"><%= vehicle.created_at.strftime("%d/%m/%Y") %></td>
                <td class="center">
                  <%= link_to ad_vehicle_path(vehicle), class: 'btn btn-primary ' do %>
                    <i class="fa fa-eye"></i>
                  <% end %>
                  <%= link_to edit_ad_vehicle_path(vehicle), class: 'btn btn-primary ' do %>
                    <i class="fa fa-pencil"></i>
                  <% end %>
                  <%= link_to ad_vehicle_path(vehicle), method: :delete, data: { confirm: "tem certeza?" }, class: 'btn  btn-danger' do %>
                    <i class="fa fa-trash"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>



