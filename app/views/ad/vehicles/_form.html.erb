<%= simple_form_for [:ad, @vehicle] do |f| %>

  <div class="row">
    <div class="col-lg-12">
      <div class="pull-right">
        <%= link_to t('.links.cancel'), ad_vehicles_path, class: 'btn btn-default' %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-3">
      <%= f.input :vehicle_type, input_html: { class: 'chosen-select', "data-placeholder": "Escolha um tipo"} %>
    </div>
    <div class="col-lg-6">
      <%= f.input :name %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-3">
      <%= f.input :national, as: :radio_buttons, item_wrapper_class: :radio %>
    </div>

    <div class="col-lg-4">
      <%= f.input :country, selected: "BR", input_html: { class: 'chosen-select'} %>
    </div>

    <div class="col-lg-5">
      <%= f.input :state %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <%= f.input :url %>
    </div>
    <div class="col-lg-6">
      <%= f.input :address %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">

      <% if f.object.publication_day? %>
       <p><b>Dias de publicação:</b> <br> <%= f.object.publication_day %></p>
       <%= f.input :publication_day, as: :check_boxes, collection: @days_of_week, item_wrapper_class: 'inline', input_html: { class: 'icheck-me'}, label:'Alterar dias de publicação' %>
      <% else %>
         <%= f.input :publication_day, as: :check_boxes, collection: @days_of_week, item_wrapper_class: 'inline', input_html: { class: 'icheck-me'} %>
      <% end %>
    </div>
  </div>

<% end %>


