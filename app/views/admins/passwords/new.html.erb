<div class="row">
  <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
          <div class="panel-heading">
              <h3 class="panel-title">Esqueceu a senha?</h3>
          </div>
          <div class="panel-body">
            <div class="brand-auth">
              <%= image_tag 'ad/logo_loop_clipagem.jpg' %>
            </div>
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                  <fieldset>
                      <%= devise_error_messages! %>
                      <div class="form-group">
                        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Insira seu email de cadastro" %>
                      </div>

                      <%= f.submit "Me enviar instruções para eu recuperar minha senha", class: 'btn btn-lg btn-outline btn-primary btn-block' %><br>
                      <%= render "admins/shared/links" %>
                  </fieldset>
              <% end %>
          </div>
      </div>
  </div>
</div>
