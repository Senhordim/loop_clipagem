<div class="row">
  <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
          <div class="panel-heading">
              <h3 class="panel-title">Acesso administrativo</h3>
          </div>
          <div class="panel-body">

            <div class="brand-auth">
              <%= image_tag 'ad/logo_loop_clipagem.jpg' %>
            </div>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <fieldset>
                  <div class="form-group">
                    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "insira seu email de cadastro" %>
                  </div>
                  <div class="form-group">
                      <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "insira sua senha" %>
                  </div>
                  <div class="checkbox">
                      <label>
                          <%= f.check_box :remember_me %> Lembrar me
                      </label>
                  </div>

                  <%= f.submit 'Entrar e gerÃªnciar', class: 'btn btn-lg btn-info btn-block' %><br>

                  <%= render "admins/shared/links" %>
              </fieldset>
            <% end %>
          </div>
      </div>
  </div>
</div>

